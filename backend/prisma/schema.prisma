generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  username   String
  email      String   @unique
  highlights Highlight[]
  rooms      RoomMember[]
}

model Room {
  id            String      @id @default(uuid())
  title         String
  bookUrl       String      
  bookPublicId  String?     
  accessPin     String      @unique
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt 
  //relations
  members RoomMember[]
  highlights Highlight[]
}

model RoomMember {
  userId String
  roomId String
  user   User @relation(fields: [userId], references: [id])
  room   Room @relation(fields: [roomId], references: [id])
  @@id([userId, roomId])
}

model Highlight {
  id        Int      @id @default(autoincrement())
  userId    String? //Just for MVP release
  roomId    String
  page      Int
  content   String?
  coords    Json     // For saving coords
  // relations
  user      User?     @relation(fields: [userId], references: [id])
  room      Room     @relation(fields: [roomId], references: [id])
  
  createdAt DateTime @default(now())
}